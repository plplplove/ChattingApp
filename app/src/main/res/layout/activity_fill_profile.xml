<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillProfile">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_profile_title"
        android:fontFamily="@font/title"
        android:textColor="@color/dark_purple"
        android:textStyle="bold"
        android:textSize="31sp"
        android:layout_marginTop="40dp"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/changeImage"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user_photo"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/changeImageButton"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit_button"
            android:layout_margin="20dp"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>

    <EditText
        android:id="@+id/firstNameInput"
        android:hint="@string/fill_user_fist_name"
        style="@style/InputStyle"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/lastNameInput"
        android:hint="@string/fill_user_last_name"
        style="@style/InputStyle"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/phoneInput"
        android:hint="@string/fill_user_phone"
        style="@style/InputStyle"
        android:inputType="phone"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/fillProfileFinishButton"
        style="@style/ButtonStyle"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintWidth_percent="0.8"
        android:text="@string/fill_finish"
        android:layout_marginTop="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>